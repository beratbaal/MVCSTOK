@using MVCStok.Models.Entitiy;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<tbl_kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>   
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
      @foreach(var ktgr in Model)
      {
          <tr>
              <th>@ktgr.KATEGORIID</th>
              <td>@ktgr.KATEGORIAD</td>
              <td><a href="/KATEGORİ/SIL/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a></td>
              <td><a href="/KATEGORİ/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-warning">Güncelle</a></td>
          </tr>
      }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))
<a href="/Kategori/YeniKategori/" class="btn btn-info">Yeni Kategori Ekle</a>

