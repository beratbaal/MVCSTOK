@model MVCStok.Models.Entitiy.tbl_kategoriler
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Kategori Adı</label>
        @Html.TextBoxFor(m=>m.KATEGORIAD,new { @class = "form-control"})
        @Html.ValidationMessageFor(m=>m.KATEGORIAD,"",new { @style="color:red"})
    </div>
    <br />
    <div>
        <button class="btn btn-success" id="btn1">Kategori Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert("Kategori Eklendi");
        });
    </script>
</form>

