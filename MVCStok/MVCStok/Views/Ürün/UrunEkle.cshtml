@model MVCStok.Models.Entitiy.tbl_urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" />
    </div>
    <br />
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.tbl_kategoriler.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required="" />
    </div>
    <br />
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" required="" />
    </div>
    <br />
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" required="" />
    </div>
    <br />
    <button class="btn btn-success" id="btn1">Ürün Ekle</button>
    <script>
        $('#btn1').click(function () {
            alert("Ürün Eklendi");
        });
    </script>

</form>

